<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Express EJS</title>
    <script src="https://telegram.org/js/telegram-web-app.js"></script>
  </head>
  <body>
    <h1 class="title">Welcome to Express with EJS</h1>
    <script>
      const MainButton = window.Telegram.WebApp.MainButton;
      const BackButton = window.Telegram.WebApp.BackButton;
      const MainTitile = document.querySelector(".title");
      const SettingButton = window.Telegram.WebApp.SettingsButton;
      MainButton.setText("Buyurtma berish");
      console.log(MainButton);
      MainButton.show();
      MainButton.onClick(() => {
        // MainButton.showProgress();
        // MainButton.hide();
        // MainButton.setParams({
        //   text: "Buyurtma berildi",
        //   is_active: false,
        //   color: "#FF0000",
        //   text_color: "#FFFFFF",
        // });
        BackButton.show();
        BackButton.onClick(() => {
          MainTitile.textContent = "Buyurtma berildi";
          BackButton.hide();
        });
        MainButton.setText("Buyurtma berildi");
        MainButton.onClick(() => {
          SettingButton.show();
          SettingButton.onClick(() => {
            MainTitile.textContent = "Settings";
          });
        });
      });
    </script>
  </body>
</html>
